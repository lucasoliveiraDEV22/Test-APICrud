@model ApiCrud.Entities.Cliente

<h2>Excluir Cliente</h2>

<p>Tem certeza que deseja excluir o cliente <strong>@Model.NmCliente</strong>?</p>

<form method="post" action="/Cliente/Delete/@Model.IdCliente">
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="/Cliente" class="btn btn-secondary">Cancelar</a>
</form>
