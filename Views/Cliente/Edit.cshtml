@model ApiCrud.Entities.Cliente

<h2>Editar Cliente</h2>

<form method="post" action="/Cliente/Edit/@Model.IdCliente">
    <input type="hidden" name="IdCliente" value="@Model.IdCliente">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" name="NmCliente" value="@Model.NmCliente" required>
    </div>
    <div class="form-group">
        <label>Cidade</label>
        <input type="text" class="form-control" name="Cidade" value="@Model.Cidade" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
